<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
<h2>User info</h2>
  
  <% if @book.image.attached? %>
    <%= image_tag book.image, size: "100x100" %>
  <% else %>
    <%= image_tag 'default-image', size: "100x100" %>
  <% end %>
  
  

<h2>New Book</h2>
  <%= form_with model: @book do |f| %>
    
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
      <%= f.submit 'Create Book' %>
  <% end %>
  </div>
  
   <div class="col-md-8 offset-md-1">
   <h2>Books</h2>
        
       
        <table class="table table-hover table-inverse">
          <thead>
          <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
          </tr>
          </thead>
          
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td><% if @book.image.attached? %>
                    <%= image_tag book.image, size: "80x80" %>
                  <% else %>
                    <%= image_tag 'default-image', size: "80x80" %>
                  <% end %></td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
             <% end %>
          </tbody>
        </table>
        
        
    </div>
    
    
    
    </div>
    </div>
  
  