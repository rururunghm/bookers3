          <th>name</th>
          <th colspan="3"></th>
          </tr>
          </thead>
          
          <tbody>
           <tr>
             <td><%= image_tag @user.get_profile_image(80,80) %></td>
             <td><%= @user.name %></td>
             <td><%= link_to "show", user_path(current_user.id) %></td>
           </tr>
          </tbody>
        </table>
        
        
    </div>
    
    
    
