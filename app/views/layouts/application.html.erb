<!DOCTYPE html>
<html>
  <head>
    <title>Bookers3App</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/06d5403368.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
     <nav class="navbar navbar-expand-lg navbar-dark bg-dark ">
        <div class="container">
          <a class="navbar-brand " href="/">
          <span>Bookers</span>
          </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto" >
      
    <% if user_signed_in? %>
      <li class="nav-item text-white">
          <%= link_to 'Home', user_path(current_user.id), class: 'nav-link text-white' %>
          <i class="fas fa-home" aria-hidden="true"></i>
      </li>
      <li class="nav-item text-white">
          <%= link_to 'User', users_path,class: 'nav-link text-white' %>
          <i class="fas fa-user" aria-hidden="true"></i>
      </li>
      <li class="nav-item text-white">
          <%= link_to 'Books', books_path ,class: 'nav-link text-white'%>
          <i class="fas fa-book-open" aria-hidden="true"></i>
      </li>
      <li class="nav-item text-white">
          <%= link_to 'Log out', destroy_user_session_path, method: :delete,class: 'nav-link text-white' %>
          <i class="fas fa-sign-out-alt" aria-hidden="true"></i>
      </li>
    <% else %>
      <li class="nav-item text-white">
          <%= link_to 'Home', root_path,class: 'nav-link text-white' %>
          <i class="fas fa-home" aria-hidden="true"></i>
      </li>
      <li class="nav-item text-white">
          <%= link_to 'About', about_path,class: 'nav-link text-white' %>
          <i class="fas fa-home" aria-hidden="true"></i>
      </li>
    
      <li class="nav-item text-white">
           <%= link_to "Sign up", new_user_registration_path ,class: 'nav-link text-white'%>
           <i class="fas fa-home" aria-hidden="true"></i>
      </li>
      <li class="nav-item text-white">
          <%= link_to "Log in", new_user_session_path ,class: 'nav-link text-white'%>
          <i class="fas fa-home" aria-hidden="true"></i>
      </li>
    <% end %>
      </ul>
      
      </div>
    </nav>
    </header>
    
    <main>
      <p id = "notice"></p>
  
        
    </div>
      <%= yield %>
    </main>
    
    <footer class="bg-wite text-black px-auto mx-auto  ">
        <div class="container mt-5">
          <div class="row">
            <div class= "mx-auto">
            <p>CopyRight Infratop.inc</p>
        </div>
    
      </div>
      </div>
    </footer>
    
  </body>
</html>